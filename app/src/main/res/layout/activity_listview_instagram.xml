<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- usuario del al que envia o recibe mensaje !-->
    <TextView
        android:id="@+id/usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User507"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"

    />
    <!-- mensaje enviado !-->
    <TextView
        android:id="@+id/mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mensaje de prueba"
        android:layout_below="@id/usuario"
    />

    <!-- hora de envio de mensaje !-->
    <TextView
        android:id="@+id/hora"
        android:text="hora de mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/mensaje"
    />
</RelativeLayout>